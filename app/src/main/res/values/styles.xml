<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProductButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:paddingLeft">@dimen/activity_half_margin</item>
        <item name="android:paddingRight">@dimen/activity_half_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/product_button_text</item>
        <item name="android:background">@drawable/product_button_selector</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
